## Module :: wireless 
wireless wlan0 {
	# %quality | %essid | %bitrate | %frequency | %ip
	format_up = "  %essid"
	format_down = "  Disconnected"
	format_bitrate = "%g %cb/s"
	format_noise = "%03d%s"
	format_quality = "%03d%s"
	format_signal = "%03d%s"
}

ethernet eth0 {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}


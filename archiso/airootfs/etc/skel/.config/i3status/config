# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
	output_format = "i3bar"
	interval = 1
	markup = "pango"
	separator = " "
	colors = true
	color_good = "#98c379"
	color_degraded = "#e5c07b"
	color_bad = "#e06c75"
	color_separator = "#292e39"
}

# order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "memory"
order += "disk /"
# order += "load"
order += "volume master"
order += "tztime local"

wireless _first_ {
#       format_up = "W: (%quality at %essid) %ip"
#       format_down = "W: down"
		format_up = "  %essid"
		format_down = "  Disconnected"
		format_bitrate = "%g %cb/s"
		format_noise = "%03d%s"
		format_quality = "%03d%s"
		format_signal = "%03d%s"
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
	# %percentage | %status | %remaining | %emptytime | %consumption
	format = "%status %percentage (%remaining)"
	format_down = "B: No Battery"
	format_percentage = "%.00f%s"
	integer_battery_capacity = true
	last_full_capacity = true
	hide_seconds = true
	low_threshold = 20
	threshold_type = percentage
#	status_chr = "B: CHR"
#	status_bat = ""
#	status_unk = "B: UNK "
#	status_full = "B: FULL"
#	status_idle = "B: IDLE"
	status_chr = ""
	status_bat = " "
	status_unk = " "
	status_full = " "
}

## Module :: cpu_usage 
cpu_usage {
	format = "P: %usage"
	degraded_threshold = 25
	format_above_degraded_threshold = "P: %usage"
	max_threshold = 75
	format_above_threshold = "P: Warning: %usage"
}

## Module :: cpu_temperature 
cpu_temperature 0 {
	path = "/sys/devices/platform/coretemp.0/temp1_input"
	format = "%degrees °C"
	max_threshold = 60
#	format_above_threshold = "Warning: %degrees °C"
	format_above_threshold = "  Warning: %degrees °C"
}

disk "/" {
	# %free | %avail | %total | %percentage_used/free/avail
#	format = "D: %free"
	format = "  %free"
#	format_not_mounted = "D: Not Mounted"
	format_not_mounted = "  Not Mounted"
	prefix_type = custom
	low_threshold = 2
#	format_below_threshold = "D: Warning: %free Free Space"
	format_below_threshold = "  Warning: %free Free Space"
	threshold_type = gbytes_free
}

load {
#        format = "%1min"
        format = " %1min %5min %15min"
		max_threshold = "5"
		format_above_threshold = "  Warning: %1min %5min %15min"
}

memory {
	# %total | %free | %used | %available | %shared
	format = "  %free"
#	format = "M: %used"
	unit = auto
	decimals = 1
	threshold_degraded = 1G
	threshold_critical = 1G
#	format_degraded ="M: Low Memory: %free"
	format_degraded = "  Low Memory: %free"
}

tztime local {
        format = " %Y-%m-%d %H:%M"
#        format = "  %I:%M %p"
}

## Module :: volume 
volume master {

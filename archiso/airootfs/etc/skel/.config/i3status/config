general {
	output_format = "i3bar"
	interval = 5
	markup = "pango"
	separator = " | "
	colors = true
	color_good = "#98c379"
	color_degraded = "#e5c07b"
	color_bad = "#e06c75"
	color_separator = "#292e39"
}



# order += "ipv6"
order += "disk /"

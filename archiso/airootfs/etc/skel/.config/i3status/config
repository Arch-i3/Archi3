### Configuration file for i3status
## http://i3wm.org/i3status/

general {
	output_format = "i3bar"
	interval = 5
	markup = "pango"
	separator = " | "
	colors = true
	color_good = "#98c379"
	color_degraded = "#e5c07b"
	color_bad = "#e06c75"
	color_separator = "#292e39"
}

# order += "ipv6"
order += "disk /"
# order += "run_watch DHCP"
# order += "run_watch VPNC"
# order += "path_exists VPN"
order += "wireless wlan0"
order += "ethernet eth0"
order += "battery 0"
order + ="cpu_usage"
order += "cpu_temperature 0"
order += "memory"
order += "load"
order += "tztime local"
order += "tztime berlin"
order += "volume master"


wireless wlan0 {
        format_up = "W: %essid"
        format_down = "W: down"
}

ethernet eth0 {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}


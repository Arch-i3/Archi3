## Module :: battery 
battery 0 {
	# %percentage | %status | %remaining | %emptytime | %consumption
	format = "%status %percentage (%remaining)"
	format_down = "No Battery"
	format_percentage = "%.00f%s"
	integer_battery_capacity = true
	last_full_capacity = true
	hide_seconds = true
	low_threshold = 20
	threshold_type = percentage
	status_chr = "CHR"
	status_bat = " "
	status_unk = "UNK "
	status_full = "FULL "
}


run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPNC {
        # file containing the PID of a vpnc process
        pidfile = "/var/run/vpnc/pid"
}

path_exists VPN {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
        path = "/proc/sys/net/ipv4/conf/tun0"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
        hide_if_equals_localtime = true
}

#tztime berlin {
#        format = "%Y-%m-%d %H:%M:%S %Z"
#        timezone = "Europe/Berlin"
#}

## Module :: tztime 
tztime berlin {
	format = "%I:%M %p"
	timezone = "Asia/Kolkata"
	locale = "en_US.UTF-8"
	hide_if_equals_localtime = false
}

#load {
#        format = "%5min"
#}

## Module :: cpu_usage 
cpu_usage {
	format = "CPU: %usage"
	degraded_threshold = 25
	format_above_degraded_threshold = "CPU  %usage"
	max_threshold = 75
	format_above_threshold = "CPU: Warning: %usage"
}

#cpu_temperature 0 {
#        format = "T: %degrees °C"
#        path = "/sys/devices/platform/coretemp.0/temp1_input"
#}

## Module :: cpu_temperature 
cpu_temperature 0 {
	path = "/sys/devices/platform/coretemp.0/temp1_input"
	format = "%degrees °C"
	max_threshold = 60
	format_above_threshold = "  Warning: %degrees °C"
}

#memory {
#        format = "%used"
#        threshold_degraded = "10%"
#        format_degraded = "MEMORY: %free"
#}

## Module :: memory 
memory {
	# %total | %free | %used | %available | %shared
	format = "RAM: %used"
	unit = auto
	decimals = 1
	threshold_degraded = 1G
	threshold_critical = 1G
	format_degraded ="RAM: Low Memory: %free"
}

#disk "/" {
#        format = "%free"
#}

# Module :: disk
disk / {
	# %free | %avail | %total | %percentage_used/free/avail
	format = "DISK: %free"
	format_not_mounted = "DISK: Not Mounted"
	prefix_type = custom
	low_threshold = 2
	format_below_threshold = "DISK: Warning: %free Free Space"
	threshold_type = gbytes_free
}


#read_file uptime {
#        path = "/proc/uptime"
#}

## Module :: volume 
volume master {
	device = "pulse"
	format = "VOL:  %volume"
	format_muted = "VOL: Muted"
}

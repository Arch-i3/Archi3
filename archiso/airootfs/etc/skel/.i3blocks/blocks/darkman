#!/bin/bash

# A Darkman t√©ma √°llapot√°nak ellen≈ërz√©se
STATUS=$(darkman get)

# √Ållapot megjelen√≠t√©se (i3blocks kimenet)
if [ "$STATUS" == "dark" ]; then
    # Ha s√∂t√©t t√©ma van, mutassunk egy "nap" ikont/sz√∂veget.
    # A sz√≠nes kimenet jav√≠tja a l√°that√≥s√°got.
    echo "üí° F√©nyes"
    echo "#FFFFFF" # Feh√©r h√°tt√©rsz√≠n (vagy a neked tetsz≈ë)
elif [ "$STATUS" == "light" ]; then
    # Ha vil√°gos t√©ma van, mutassunk egy "hold" ikont/sz√∂veget.
    echo "üåë S√∂t√©t"
    echo "#000000" # S√∂t√©t h√°tt√©rsz√≠n
else
    # Hiba/nem v√°rt √°llapot
    echo "‚ùì Ismeretlen"
    echo "#FF0000" # Piros a hibajelz√©sre
fi

# Kattint√°si esem√©nyek kezel√©se
# Az i3blocks a $BLOCK_BUTTON v√°ltoz√≥val jelzi, ha r√°kattintottak
if [ "$BLOCK_BUTTON" ]; then
    # Ha b√°rmelyik gombot lenyomj√°k, v√°ltsuk az √°llapotot (toggle)
    darkman toggle
fi
